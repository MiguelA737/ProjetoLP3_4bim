@model ProjetoLP3_4bim.Models.Editora

@{
    ViewData["Title"] = "Cadastrar Editora";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastrar</h2>

<h4>Editora</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeEditora" class="control-label"></label>
                <input asp-for="NomeEditora" class="form-control" />
                <span asp-validation-for="NomeEditora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelEditora" class="control-label"></label>
                <input asp-for="TelEditora" class="form-control" />
                <span asp-validation-for="TelEditora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailEditora" class="control-label"></label>
                <input asp-for="EmailEditora" class="form-control" />
                <span asp-validation-for="EmailEditora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
