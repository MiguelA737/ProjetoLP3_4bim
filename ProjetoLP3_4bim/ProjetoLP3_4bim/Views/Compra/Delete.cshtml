@model ProjetoLP3_4bim.Models.Compra

@{
    ViewData["Title"] = "Excluir";
}

<h2>Excluir</h2>

<h3>Tens certeza que deseja excluir o registro?</h3>
<div>
    <h4>Compra</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LivroIdLivroNavigation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LivroIdLivroNavigation.TituloLivro)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UsuarioIdUsuarioNavigation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UsuarioIdUsuarioNavigation.EmailUsuario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCompra" />
        <input type="submit" value="Excluir" class="btn btn-default" /> |
        <a asp-action="Index">Voltar para Lista</a>
    </form>
</div>
