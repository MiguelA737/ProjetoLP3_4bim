@model ProjetoLP3_4bim.Models.Compra

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCompra" />
            <div class="form-group">
                <label asp-for="LivroIdLivro" class="control-label"></label>
                <select asp-for="LivroIdLivro" class="form-control" asp-items="ViewBag.LivroIdLivro"></select>
                <span asp-validation-for="LivroIdLivro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioIdUsuario" class="control-label"></label>
                <select asp-for="UsuarioIdUsuario" class="form-control" asp-items="ViewBag.UsuarioIdUsuario"></select>
                <span asp-validation-for="UsuarioIdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
