@model ProjetoLP3_4bim.Models.GeneroLivro

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

<h4>Gênero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdGeneroLivro" />
            <div class="form-group">
                <label asp-for="NomeGeneroLivro" class="control-label"></label>
                <input asp-for="NomeGeneroLivro" class="form-control" />
                <span asp-validation-for="NomeGeneroLivro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DesGeneroLivro" class="control-label"></label>
                <input asp-for="DesGeneroLivro" class="form-control" />
                <span asp-validation-for="DesGeneroLivro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
