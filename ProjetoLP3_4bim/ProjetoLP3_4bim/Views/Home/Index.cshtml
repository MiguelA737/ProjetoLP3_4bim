@{
    ViewData["Title"] = "Home";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/classicos.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Bem-vindo ao país do clássico.<br />
                </p>

            </div>
        </div>
        <div class="item">
            <img src="~/images/best.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p id="texto-card2">
                    Pessoas conectadas escolhem mais vendidos.<br />
                </p>

 
            </div>
        </div>
        <div class="item">
            <img src="~/images/adapt.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p id="texto-card3">
                    Todos adoramos uma adaptação!<br />
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br />
<div class="row">
    <div class="col-md-4 justify-content-center">
        <h2>Livro, nosso melhor amigo</h2>
        <img class="home-images" src="~/images/livros.jpg" />
        <p>
            Conheça nossa seleção dos tão amados... Livros!
        </p>
        <a  class="btn btn-default" href="https://localhost:44319/Livro">Clique aqui! &raquo;</a>
    </div>
    <div class="col-md-4 justify-content-center">
        <h2>Seus autores favoritos</h2>
        <img  class="home-images" src="~/images/autores.png" />
        <p>Quem não tem um autor preferido? Conheça os nossos!</p>
        <a class="btn btn-default mr-0 ml-0" href="https://localhost:44319/Autores">Acesse! &raquo;</a>
    </div>
    <div class="col-md-4">
        <h2>Compre seu livro</h2>
        <img class="home-images" src="~/images/compra.jpg" />
        <p>Adquira já o seu livro!</p>
        <a class="btn btn-default mr-0 ml-0" href="https://localhost:44319/Compra">Compre aqui! &raquo;</a>
    </div>
</div>
