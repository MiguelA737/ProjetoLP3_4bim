@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/classicos.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Bem-vindo ao país do clássico.<br />
                    <a class="btn btn-default" href="https://www.saraiva.com.br/livros/literatura-brasileira">
                        Veja mais
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/best.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   Pessoas conectadas escolhem mais vendidos.<br />
                    <a class="btn btn-default" href="https://www.saraiva.com.br/busca?fq=C:4&O=OrderByTopSaleDESC">
                        Veja mais
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/adaptacao.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Todos adoramos uma adaptação!<br />
                    <a class="btn btn-default" href="https://www.saraiva.com.br/especial/harry-potter">
                        Veja mais
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-12 col-md-6">
        <div class="card">
            <img class="card-img-top" src="~/images/livros.jpg"/>
            <div class="card-body">
                <a asp-area="" asp-controller="Livro" asp-action="Index" class="card-title">Livros</a>

                <p class="card-text">

                </p>
            </div>
        </div>
    </div>
</div>
