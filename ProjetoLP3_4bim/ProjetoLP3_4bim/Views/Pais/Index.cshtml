@model IEnumerable<ProjetoLP3_4bim.Models.Pais>

@{
    ViewData["Title"] = "Lista de Países";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Países</h2>

<p>
    <a asp-action="Create">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomePais)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomePais)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPais">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdPais">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPais">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
