@model ProjetoLP3_4bim.Models.Rua

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

<h4>Rua</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRua" />
            <div class="form-group">
                <label asp-for="BairroIdBairro" class="control-label"></label>
                <select asp-for="BairroIdBairro" class="form-control" asp-items="ViewBag.BairroIdBairro"></select>
                <span asp-validation-for="BairroIdBairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeRua" class="control-label"></label>
                <input asp-for="NomeRua" class="form-control" />
                <span asp-validation-for="NomeRua" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
